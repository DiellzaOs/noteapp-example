<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>    
    <title>Edit Notes</title>
</head>

<body>

  <%- include('../partials/head') %> 

    <div class="container mt-5 mb-4">
        <div class="col-md-6 col-md-offset-3 mx-auto">
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingTwo">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                <h5><%= product.title %></h5>
              </button>
            </h2>
            <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
              <div class="accordion-body">
                <div class="text-right">
                <label for="category"><b>Category: </b></label>
                  <a class="btn btn-success" id="category" href="/products?category=<%= product.category %>"><%= product.category %> </a>
                  <p class="text-right"></p> 
                  
                </div>
                <div class="mb-3">
                  <ul class="list-group">
                    <li class="list-group-item border-2"><h5>Description:</h5>
                        <%= product.description%>
                    </li>
                </ul>
                </div> 
                
                <div>
                  <form action="/products/<%=product._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
                </div>
              </div>

              <div class="mx-auto">
                <blockquote class="blockquote">
                  <p class="mb-2">  
                  <footer class="blockquote-footer"><cite><%= product.createdAt.toLocaleDateString()%></cite></footer>
                  </p>
                </blockquote>
              </div>
              
            </div>
          </div>
        
        
        
    
        
    
    


    
    
        <div class="card mt-5 mb-3">
            <div class="card body text-center text-white pt-1 border-0" style="background-color: rgb(51, 51, 51);">
                <h5>Edit Note</h5>
            </div>
        </div>
        
        
        <form action="/products/<%=product._id%>?_method=PUT" method="POST">
            <div class="mb-3">
                <label for="title" class="form-label"><b>Title</b></label>
                <input type="text" class="form-control" name="title" id="title" placeholder="Title" value="<%=product.title%>">
            </div>
            <div class="mb-3">
                <label for="description" class="form-label"><b>Description</b></label>
                <input type="text" class="form-control" name="description" id="description" value="<%= product.description %>">
                <!-- <textarea class="form-control" name="description" id="description" rows="3" placeholder="Description" ></textarea> -->
            </div>
            <div class="mb-3">
            <label for="category" class="form-label"><b>Select Category</b></label>
            <select name="category" id="category" class="form-select" aria-label="Default select example">
                <% for(let category of categories){ %>
                <option value="<%=category%>" <%= product.category === category ? 'selected': '' %>><%=category%></option>
                <% } %>
            </select>
          </div>
            <button class="btn btn-success" type="submit">Submit</button>
        </form>
    </div>
    
</div>
</div>
    <!-- <a href="/products/index/<%=product._id%>">Cancel</a> -->

</body>

</html>